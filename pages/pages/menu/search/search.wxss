page {
  background-color: #fff;
}
.search-header-box {
  position: fixed;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 0 10px 0 #eee;
  z-index: 99;
}
.search-header-input {
  width: 100%;
  height: 70rpx;
  display: flex;
  border-radius: 4rpx;
  align-items: center;
  position: relative;
  background-color: #f5f5f5;
}
.search-header-input .icon {
  right: 0;
  z-index: 999;
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.search-header-input input {
  width: 80%;
  padding: 20rpx;
  color: #27323f;
}
.search-header-button {
  background-color: #ffd305;
  color: #27323f;
  border-radius: 4rpx;
  height: 70rpx;
  width: 130rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
}
.goods-container {
  width: 100%;
  padding-bottom: 50rpx;
  background-color: #ffffff;
}
.goods-box {
  width: 45%;
  margin: 20px 0 0 13px;
  display: inline-block;
  box-shadow: 0 0 20rpx #f5f5f5;
  border-radius: 4rpx;
}
.img-box image {
  width: 100%;
  display: block;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}
.img-box {
  width: 100%;
  background-color: #f5f5f5;
  margin-bottom: 5px;
  position: relative;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  overflow: hidden;
}
.goods-characteristic {
  font-size: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: rgba(240, 236, 225, 0.88);
  color: #a18d65;
  height: 35px;
  line-height: 35px;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
.goods-characteristic text {
  padding-left: 5px;
}
.goods-title {
  font-size: 28rpx;
  color: #27323f;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 5px;
}
.goods-price {
  color: #ffd305;
  font-size: 28rpx;
  text-align: left;
  width: 100%;
  padding: 3px 4px;
}
.goods-price-naver {
  color: #7b8196;
  font-size: 24rpx;
  line-height: 28px;
  width: 100%;
  text-align: right;
  padding: 0 3px;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
