page {
  background-color: #ffffff;
}
.sticky-in-relative-container {
  position: relative;
  height: 46px;
}
.nav_top {
  background: #fff;
  font-size: 14px;
  color: #7b8196;
  box-shadow: 0 0 10px 0 #eee;
}
.nav_top .ui-col.active {
  color: #ffd305;
}
.nav_top .ui-row {
  width: 100%;
  height: 100%;
}
.nav_top .ui-row view {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods-container {
  width: 100%;
  height: 82%;
  padding-bottom: 50rpx;
  background-color: #ffffff;
  border-top: 20rpx solid #f5f5f5;
  margin-top: 100rpx;
}
.goods-container swiper {
  width: 100%;
  height: 100%;
}
.goods-remark {
  text-align: center;
  padding-top: 40rpx;
  color: #27323f;
}
.goods-box {
  width: 45%;
  margin: 20px 0 0 13px;
  display: inline-block;
  box-shadow: 0 0 20rpx #f5f5f5;
  border-radius: 4rpx;
}
.img-box image {
  width: 100%;
  display: block;
}
.img-box {
  width: 100%;
  background-color: #f5f5f5;
  margin-bottom: 5px;
  position: relative;
  overflow: hidden;
}
.goods-characteristic {
  font-size: 22rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: rgba(240, 236, 225, 0.88);
  color: #a18d65;
  height: 35px;
  line-height: 35px;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
.goods-characteristic text {
  padding-left: 5px;
}
.goods-title {
  font-size: 28rpx;
  color: #27323f;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 5px;
}
.goods-price {
  color: #ffd305;
  font-size: 28rpx;
  text-align: left;
  padding: 3px 4px;
}
.goods-original {
  color: #bfbfbf;
  text-decoration: line-through;
  font-size: 28rpx;
  text-align: left;
  padding: 3px 4px;
}
.goods-price-naver {
  color: #7b8196;
  font-size: 24rpx;
  line-height: 28px;
  width: 100%;
  text-align: right;
  padding: 0 3px;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-more-goods .no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
